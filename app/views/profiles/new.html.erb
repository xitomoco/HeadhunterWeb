<div class="container">
  <div class="col-1">
    <h1><%= Profile.model_name.human %></h1>
  </div>

  <div class="d-flex p-2">
  <%= form_with model: @profile, local: :true  do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :social_name %>
      <%= f.text_field :social_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :date_of_birth %>
      <%= f.date_field :date_of_birth, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :formations %>
      <%= f.text_field :formations, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :xp %>
      <%= f.text_area :xp, class: "form-control" %>
    </div>

    <div>
      <%= f.submit Profile.human_attribute_name('save'), class: "btn btn-success" %>
    </div>
  <% end %>
  </div>
</div>